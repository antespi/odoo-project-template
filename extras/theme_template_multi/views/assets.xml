<!-- Method 1 : Add assets into website.assets_frontend -->
<!-- Preferred because Odoo automatically concatenate and compress all assets -->
<template id="assets" name="Theme Assets" priority="20"
          inherit_id="website.assets_frontend">
    <xpath expr="." position="inside">
        <link rel="stylesheet" href="/theme_template_multi/static/src/less/theme_multi.css"/>
        <script type="text/javascript" src="/theme_template_multi/static/src/js/theme.frontend.js"></script>
    </xpath>

</template>

<template id="graphene_editor_js" inherit_id="website.assets_editor" active="True">
    <xpath expr="." position="inside">
        <script type="text/javascript" src="/theme_template_multi/static/src/js/theme.editor.js" />
    </xpath>
</template>

